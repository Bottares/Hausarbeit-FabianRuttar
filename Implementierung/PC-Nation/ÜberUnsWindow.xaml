<UserControl x:Class="PC_Nation.ÜberUnsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PC_Nation"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Über Uns" FontSize="15"></TextBlock>
            <Border BorderBrush="Black" BorderThickness="0.5" Margin="0,5,0,10"></Border>
            <TextBlock Text="PC-Nation ist kein kommerzieller Online Shop, er dient lediglich zur Darstellung der einzelnen Funktionen."></TextBlock>
            <TextBlock Text="Diese Applikation ist der Hauptbestandteil der Hausarbeit von Fabian Ruttar für den Abschluss als Wirtschaftsinformatiker am KBBZ Halberg im Jahre 2021." TextWrapping="Wrap" Margin="0,10"></TextBlock>
            <Image x:Name="Logo_Icon" Height="400" Width="400"></Image>
        </StackPanel>
    </Grid>
</UserControl>
